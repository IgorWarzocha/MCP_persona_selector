{
  "name": "@igorwarzocha/mcp_persona_selector", // Or your desired npm package name
  "version": "0.2.2", // Starting version for your project
  "description": "MCP server for terminal operations, file editing, and dynamic persona management for Claude.",
  "license": "MIT",
  "author": "Igor Warzocha", // Your name/handle
  "homepage": "https://github.com/IgorWarzocha/MCP_persona_selector",
  "bugs": "https://github.com/IgorWarzocha/MCP_persona_selector/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/IgorWarzocha/MCP_persona_selector.git"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "mcp-persona-selector": "dist/index.js", // Consider a new CLI name if desired
    "setup-mcp-personas": "dist/setup-claude-server.js" // Consider a new setup script name
  },
  "files": [
    "dist",
    "logo.png", // If you have one
    "README.md"
  ],
  "scripts": {
    "sync-version": "node scripts/sync-version.js",
    "bump": "node scripts/sync-version.js --bump",
    "bump:minor": "node scripts/sync-version.js --bump --minor",
    "bump:major": "node scripts/sync-version.js --bump --major",
    "build": "tsc && shx cp setup-claude-server.js dist/ && shx chmod +x dist/*.js",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:debug": "node --inspect-brk=9229 dist/index.js",
    "setup": "npm install && npm run build && node setup-claude-server.js",
    "setup:debug": "npm install && npm run build && node setup-claude-server.js --debug",
    "prepare": "npm run build", // Runs before npm publish and on local npm install
    "test": "node test/run-all-tests.js", // Assuming you'll adapt tests
    "link:local": "npm run build && npm link",
    "unlink:local": "npm unlink",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js"
    // You might want to remove or adapt the fuzzy-log scripts if they are not relevant to the core persona selector
  },
  "publishConfig": {
    "access": "public" // Or private if you don't intend to publish to npm
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "persona management",
    "terminal",
    "file-editing",
    "desktop automation"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@vscode/ripgrep": "^1.15.9", // From original DesktopCommanderMCP
    "cross-fetch": "^4.1.0",     // From original DesktopCommanderMCP
    "fastest-levenshtein": "^1.0.16", // From original DesktopCommanderMCP (used in edit.ts)
    "glob": "^10.3.10",        // From original DesktopCommanderMCP (used in filesystem.ts for searchFiles, though ripgrep is primary for searchCode)
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/node": "^20.17.24",
    "commander": "^13.1.0",      // From original DesktopCommanderMCP
    "nodemon": "^3.0.2",         // From original DesktopCommanderMCP
    "shx": "^0.3.4",             // For cross-platform shell commands in scripts
    "typescript": "^5.3.3"       // Or your preferred TypeScript version
  }
}
